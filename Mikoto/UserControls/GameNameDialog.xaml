<UserControl x:Class="Mikoto.GameNameDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:hc="https://handyorg.github.io/handycontrol"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:usercontrols="clr-namespace:Mikoto.UserControls" 
             d:DataContext="{d:DesignInstance Type=usercontrols:GameNameDialogViewModel}"
             mc:Ignorable="d">
    <UserControl.InputBindings>
        <KeyBinding Key="Escape" Command="hc:ControlCommands.Close" />
    </UserControl.InputBindings>
    <Border Background="{DynamicResource RegionBrush}" Padding="24">
        <ScrollViewer>
            <Grid Margin="8" Width="520">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- 第一行 -->
                <TextBox Grid.Row="0" Grid.ColumnSpan="2"
                 Text="{Binding GameName, UpdateSourceTrigger=PropertyChanged}"
                 Margin="6" Style="{DynamicResource TextBoxExtend}"
                 hc:TitleElement.Title="{DynamicResource MainWindow_Drawer_NameHint}" />

                <!-- 路径 -->
                <TextBox Grid.Row="1" Grid.ColumnSpan="2"
                 Text="{Binding FilePath, UpdateSourceTrigger=PropertyChanged}"
                 Margin="6" Style="{DynamicResource TextBoxExtend}"
                 hc:TitleElement.Title="{DynamicResource MainWindow_Drawer_PathHint}" />

                <!-- 左右并排 -->
                <ComboBox Grid.Row="2" Grid.Column="0"
                  ItemsSource="{Binding LangList}"
                  SelectedItem="{Binding SrcLang}"
                  Margin="6" Style="{DynamicResource ComboBoxExtend}"
                  hc:TitleElement.Title="源语言" />

                <ComboBox Grid.Row="2" Grid.Column="1"
                  ItemsSource="{Binding LangList}"
                  SelectedItem="{Binding DstLang}"
                  Margin="6" Style="{DynamicResource ComboBoxExtend}"
                  hc:TitleElement.Title="目标语言" />

                <TextBox Grid.Row="3" Grid.Column="0"
                 Text="{Binding HookCode}"
                 Margin="6"
                 hc:TitleElement.Title="HookCode"
                 Style="{DynamicResource TextBoxExtend}" />

                <TextBox Grid.Row="3" Grid.Column="1"
                 Text="{Binding MisakaHookCode}"
                 Margin="6"
                 hc:TitleElement.Title="MisakaHookCode"
                 Style="{DynamicResource TextBoxExtend}" />

                <CheckBox Grid.Row="4" Grid.Column="0"
                  Content="游戏为 64 位程序"
                  Margin="6"
                  IsChecked="{Binding IsX64}" />

                <ComboBox Grid.Row="4" Grid.Column="1"
                  ItemsSource="{Binding RepairFuncList}"
                  SelectedItem="{Binding SelectedRepairFunc}"
                  Margin="6" Style="{DynamicResource ComboBoxExtend}"
                  hc:TitleElement.Title="文本修复函数" />

                <TextBox Grid.Row="5" Grid.Column="0"
                 Text="{Binding RepairParamA}"
                 Margin="6" Style="{DynamicResource TextBoxExtend}"
                 hc:TitleElement.Title="文本修复参数 A" />

                <TextBox Grid.Row="5" Grid.Column="1"
                 Text="{Binding RepairParamB}"
                 Margin="6" Style="{DynamicResource TextBoxExtend}"
                 hc:TitleElement.Title="文本修复参数 B" />

                <!-- 按钮行 -->
                <StackPanel Grid.Row="6" Grid.ColumnSpan="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="14">

                    <Button Height="34" MinWidth="120"
                    Margin="8"
                    Content="{DynamicResource MainWindow_Drawer_NameConfirmBtn}"
                    Style="{DynamicResource ButtonSuccess}" 
                    Command="hc:ControlCommands.Close" Click="Button_Click"/>

                    <Button Height="34" MinWidth="120"
                    Margin="8"
                    Content="取消"
                    Command="hc:ControlCommands.Close"/>
                </StackPanel>
            </Grid>
        </ScrollViewer>

    </Border>
</UserControl>
