<Window x:Class="Mikoto.LogViewer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="LogViewer"
        Height="500"
        Width="800"
        Background="#1E1E1E"
        Foreground="White">

    <DockPanel LastChildFill="True">
        <!-- 顶部显示日志数量 -->
        <TextBlock Name="LogCountTextBlock"
                   DockPanel.Dock="Top"
                   Margin="5"
                   Foreground="LightGray"
                   Text="0 Items" />

        <!-- 日志显示区域 -->
        <RichTextBox Name="LogRichTextBox"
                     FontFamily="Consolas"
                     FontSize="14"
                     Background="#1E1E1E"
                     Foreground="White"
                     IsReadOnly="True"
                     VerticalScrollBarVisibility="Auto"
                     HorizontalScrollBarVisibility="Auto"
                     AcceptsReturn="True"
                     AcceptsTab="True" 
                     BorderThickness="0"
                     Margin="0"
                     Padding="0"/>
    </DockPanel>
</Window>
