<Page x:Class="Mikoto.SettingsPages.TranslatorPages.CommonTranslatorSettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:hc="https://handyorg.github.io/handycontrol"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:translatorpages="clr-namespace:Mikoto.SettingsPages.TranslatorPages" 
      d:DataContext="{d:DesignInstance Type=translatorpages:CommonTranslatorSettingsPageViewModel}"
      mc:Ignorable="d"
      d:DesignHeight="450"
      d:DesignWidth="594"
      Title="CommonTranslatorSettingsPage">

    <Grid>
        <hc:ScrollViewer HorizontalScrollBarVisibility="Disabled">
            <StackPanel Margin="20,10,20,0">

                <!-- Introduce -->
                <TextBlock  Visibility="{Binding DescriptionVisibility}"
                            Text="{Binding Definition.Introduce}"
                             FontSize="16"
                            TextWrapping="WrapWithOverflow"
                            />

                <!-- Access Key -->
                <hc:TextBox hc:InfoElement.TitlePlacement="Left" Margin="0,10,0,0"
                            Visibility="{Binding AccessKeyVisibility}"
                            hc:InfoElement.Title="{Binding Definition.AccessKey.Title}"
                            Name="ApiIdBox"
                            hc:InfoElement.ShowClearButton="True" />


                <!-- Secret Key -->
                <hc:TextBox hc:InfoElement.TitlePlacement="Left"
                            Margin="0,10,0,0"
                            Visibility="{Binding SecretKeyVisibility}"
                            hc:InfoElement.Title="{Binding Definition.SecretKey.Title}"
                            Text="{Binding Definition.SecretKey.Value}"
                            Name="ApiSecretBox"
                            hc:InfoElement.ShowClearButton="True"/>

                <!-- Region (动态可选) -->
                <hc:TextBox Margin="0,10,0,0"
                        Visibility="{Binding RegionVisibility}"  
                    hc:InfoElement.TitlePlacement="Left"
                        hc:InfoElement.Title="{Binding Definition.Region.Title}"
                        Name="ApiRegionBox"
                        hc:InfoElement.ShowClearButton="True" />

                <!-- Endpoint (动态可选) -->
                <hc:TextBox Margin="0,10,0,0"
                        Visibility="{Binding EndpointVisibility}" 
                        hc:InfoElement.TitlePlacement="Left"
                        hc:InfoElement.Title="{Binding Definition.Endpoint.Title}"
                        Name="ApiEndpointBox"
                        hc:InfoElement.ShowClearButton="True" />

                <hc:Divider />

                <!-- 测试文本 -->
                <hc:TextBox hc:InfoElement.TitlePlacement="Left"
                                hc:InfoElement.Title="{DynamicResource API_testSrcText}"
                                Name="TestSrcText"
                                hc:InfoElement.ShowClearButton="True"
                                Text="{DynamicResource API_testCase}" />

                <!-- 语言 & 测试按钮 -->
                <Grid Margin="0,10,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="50" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <hc:TextBox hc:InfoElement.TitlePlacement="Left"
                                    hc:InfoElement.Title="{DynamicResource API_testSrcLang}"
                                    Name="TestSrcLang"
                                    hc:InfoElement.ShowClearButton="True"
                                    Text="ja"
                                    TextAlignment="Center"/>

                    <hc:TextBox Grid.Column="2"
                                    hc:InfoElement.TitlePlacement="Left"
                                    hc:InfoElement.Title="{DynamicResource API_testDstLang}"
                                    Name="TestDstLang"
                                    hc:InfoElement.ShowClearButton="True"
                                    Text="zh"
                                    TextAlignment="Center"/>

                    <Button Grid.Column="3"
                                Content="{DynamicResource API_testTransBtn}"
                                Margin="10,0,0,0"
                                Width="122"
                                Click="TransTestBtn_Click"/>
                </Grid>

                <!-- 文档 & 语言代码 & 计费 -->
                <StackPanel Margin="0,10,0,0"
                            Orientation="Horizontal"
                            HorizontalAlignment="Right">
                    <Button Content="{DynamicResource API_applyBtn}"
                            Visibility="{Binding ApplyVisibility}"
                            Width="122"
                            Click="ApplyBtn_Click"/>
                    <Button Content="{DynamicResource API_langCode}"
                            Visibility="{Binding LangCodeVisibility}"
                            Width="122"
                            Margin="10,0,0,0"
                            Click="LangCodeBtn_Click"/>
                    <Button Content="{DynamicResource API_docBtn}"
                            Visibility="{Binding DocVisibility}"
                                Margin="10,0,0,0"
                                Width="150"
                                Click="DocBtn_Click"/>

                    <Button Content="{DynamicResource API_billBtn}"
                            Visibility="{Binding BillVisibility}"
                                Margin="10,0,0,0"
                                Width="122"
                                Click="BillingBtn_Click"/>
                </StackPanel>

            </StackPanel>
        </hc:ScrollViewer>
    </Grid>

</Page>
