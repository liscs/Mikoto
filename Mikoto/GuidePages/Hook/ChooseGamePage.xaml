<Page x:Class="Mikoto.GuidePages.Hook.ChooseGamePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:hc="https://handyorg.github.io/handycontrol"
      xmlns:local="clr-namespace:Mikoto.GuidePages"
      xmlns:hook="clr-namespace:Mikoto.GuidePages.Hook"
      d:DataContext="{d:DesignInstance Type=hook:ChooseGamePageViewModel}"
      mc:Ignorable="d"
      d:DesignHeight="400"
      d:DesignWidth="800"
      Title="ChooseGamePage">

    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0"
                        Margin="10">
                <TextBlock Foreground="{DynamicResource PrimaryForeground}"
                           Text="{DynamicResource ChooseGamePage_Introduce}"
                           FontSize="{DynamicResource SubHeadFontSize}"
                           TextWrapping="Wrap" />
                <TextBlock Name="NoAdminPrivilegesTextBlock"
                           Text="{DynamicResource ChooseGamePage_NoAdminWarn}"
                           TextWrapping="Wrap"
                           FontSize="{DynamicResource SubHeadFontSize}"
                           Foreground="{DynamicResource WarningBrush}" />
            </StackPanel>

            <hc:ComboBox Name="GameProcessComboBox"
             Grid.Row="1"
             Margin="10"
             VerticalAlignment="Center"
             SelectionChanged="GameProcessComboBox_SelectionChanged"
             DisplayMemberPath=""
             SelectedValuePath="PID" 
             ItemsSource="{Binding ProcessList}"
             SelectedItem="{Binding SelectedProcess}">
                <hc:ComboBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="2">
                            <!-- 显示图标 -->
                            <Image Source="{Binding Icon}" Width="16" Height="16" Margin="0,0,4,0">
                                <Image.Style>
                                    <Style TargetType="Image">
                                        <Setter Property="Visibility" Value="Visible"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Icon}" Value="{x:Null}">
                                                <Setter Property="Visibility" Value="Collapsed"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Image.Style>
                            </Image>
                            <!-- 显示进程名 + 窗口标题 + PID -->
                            <TextBlock Text="{Binding DisplayName}" 
                           TextTrimming="CharacterEllipsis"
                           ToolTip="{Binding DisplayName}" />
                        </StackPanel>
                    </DataTemplate>
                </hc:ComboBox.ItemTemplate>
            </hc:ComboBox>

            <TextBlock Foreground="{DynamicResource PrimaryForeground}"
                       Grid.Row="2"
                       Name="AutoHookTag"
                       Text="[AutoHook]"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Margin="10"
                       FontSize="15"></TextBlock>
            <StackPanel Grid.Row="3"
                        HorizontalAlignment="Right"
                        Orientation="Horizontal">
                <Button Grid.Row="3"
                        Margin="10"
                        Width="205"
                        Content="{DynamicResource ChooseGamePage_BtnConfirm}"
                        Click="ConfirmButton_Click" />
            </StackPanel>


        </Grid>

        <StackPanel hc:Growl.GrowlParent="True"
                    HorizontalAlignment="Right"
                    Margin="15" />
    </Grid>
</Page>
