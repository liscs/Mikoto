<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:hc="https://handyorg.github.io/handycontrol">
    <ResourceDictionary.MergedDictionaries>
        <hc:Theme Skin="Default" />
    </ResourceDictionary.MergedDictionaries>

    <SolidColorBrush x:Key="PrimaryBackground"
                     Color="White"></SolidColorBrush>
    <SolidColorBrush x:Key="PrimaryForeground"
                     Color="Black"></SolidColorBrush>


    <SolidColorBrush x:Key="MainBtnColor"
                     Color="#ffff556d"></SolidColorBrush>
    <SolidColorBrush x:Key="BoxBtnColor"
                     Color="#ffff8e9F"></SolidColorBrush>

    <SolidColorBrush x:Key="ButtonTextColor"
                     Color="#fffcf4f2"
                     Opacity="0.85"></SolidColorBrush>
    <FontWeight x:Key="ButtonTextWeight">DemiBold</FontWeight>

    <!--设置界面资源-->
    <SolidColorBrush x:Key="SettinrTitleColor"
                     Color="#666666" />
    <FontWeight x:Key="SettinrTitleTextWeight">Black</FontWeight>

</ResourceDictionary>