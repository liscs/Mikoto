<Page x:Class="MisakaTranslator_WPF.GuidePages.CompletationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MisakaTranslator_WPF.GuidePages"
      mc:Ignorable="d" 
      d:DesignHeight="400" d:DesignWidth="800"
      Title="CompletationPage">

    <Grid Background="White">

        <Grid.RowDefinitions>
            <RowDefinition Height="145*"></RowDefinition>
            <RowDefinition Height="25*"></RowDefinition>
            <RowDefinition Height="30*"></RowDefinition>
        </Grid.RowDefinitions>
        <Image Grid.Row="0" Margin="0" Source="Completation_small.png"></Image>

        <TextBlock Grid.Row="1" Text="{StaticResource CompletationPage_Hint}" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="15"/>

        <Button Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="15" Height="Auto" Content="{StaticResource CompletationPage_BtnConfirm}" Click="ConfirmBtn_Click" />


    </Grid>
</Page>
