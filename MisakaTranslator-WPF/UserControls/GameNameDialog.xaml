<UserControl x:Class="MisakaTranslator_WPF.GameNameDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MisakaTranslator_WPF"
             mc:Ignorable="d" 
             xmlns:hc="https://handyorg.github.io/handycontrol"
             d:DesignHeight="450" d:DesignWidth="800">
    <Border Background="{DynamicResource RegionBrush}" Padding="24">
        <StackPanel>
            <TextBox Name="nameBox" Margin="10" Width="196" hc:InfoElement.Placeholder="{StaticResource MainWindow_Drawer_NameHint}" hc:InfoElement.Necessary="True" Style="{StaticResource TextBoxExtend}"/>
            <Button Height="30" Click="Button_Click" Command="hc:ControlCommands.Close" Style="{StaticResource ButtonSuccess}" Content="{DynamicResource MainWindow_Drawer_NameConfirmBtn}"/>
        </StackPanel>
    </Border>
</UserControl>
