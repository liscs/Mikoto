<Page x:Class="MisakaTranslator.SettingsPages.DictionaryPages.MecabDictPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:hc="https://handyorg.github.io/handycontrol"
      xmlns:local="clr-namespace:MisakaTranslator.SettingsPages.DictionaryPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MecabDictPage">

    <StackPanel>
        <TextBlock Foreground="{DynamicResource PrimaryForeground}" Text="{DynamicResource MecabDictPage_Introduce}" FontSize="16" TextWrapping="WrapWithOverflow" Margin="10" />
        <TextBox hc:InfoElement.TitlePlacement="Top" hc:InfoElement.Title="{DynamicResource MecabDictPage_DBPath}" Name="PathBox" IsReadOnly="True" Margin="20,10" />
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="20,10">
            <Button Content="{DynamicResource MecabDictPage_ClearPath}" Width="122" Click="ClearPathBtn_Click" Margin="0,0,10,0" />
            <Button Content="{DynamicResource JbeijingTransSettingsPage_ChoosePath}" Width="122" Click="ChoosePathBtn_Click" Margin="10,0,0,0" />
        </StackPanel>
    </StackPanel>
</Page>
