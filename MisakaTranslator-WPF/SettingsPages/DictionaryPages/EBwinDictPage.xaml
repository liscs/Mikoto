<Page x:Class="MisakaTranslator_WPF.SettingsPages.DictionaryPages.ManageDictionariesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MisakaTranslator_WPF.SettingsPages.DictionaryPages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ManageDictionariesPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="9*"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="{DynamicResource EBwinDictPage_Introduce}" FontSize="16" TextWrapping="WrapWithOverflow" Margin="10" />
        <StackPanel Grid.Row="1" Margin="20,10,20,10">
            <StackPanel.Resources>
                <Style TargetType="{x:Type DockPanel}">
                    <Setter Property="Margin" Value="0,10,0,0" />
                </Style>
            </StackPanel.Resources>
            <Button Margin="10" Click="ButtonAddDictionary_OnClick" Content="{DynamicResource EBwinDictPage_AddDictionary}"/>

            <ListBox x:Name="DictionariesDisplay" Focusable="False" Margin="10" BorderThickness="0"/>
        </StackPanel>
    </Grid>
</Page>
