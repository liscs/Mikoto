<?xml version="1.0" encoding="utf-8"?>
<local:BaseStepPage
    x:Class="Mikoto.Fluent.AddGamePages.LanguagePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Mikoto.Fluent.AddGamePages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                    xmlns:local11="using:Mikoto.Core.ViewModels.AddGame" xmlns:local112="using:Mikoto.Core.Models.AddGame"
    mc:Ignorable="d">

    <Grid x:Name="ContentGrid" Margin="40,20,40,0">
        <StackPanel Spacing="20" MaxWidth="600" HorizontalAlignment="Left">

            <TextBlock Text="配置语言选项" Style="{StaticResource TitleTextBlockStyle}" Margin="0,0,0,10"/>

            <StackPanel Spacing="8">
                <TextBlock Text="游戏原文语言" Style="{StaticResource BodyStrongTextBlockStyle}"/>
                <ComboBox x:Name="SourceLanguageCombo" 
                          HorizontalAlignment="Stretch"
                          PlaceholderText="选择游戏内显示的语言..."
                          ItemsSource="{x:Bind ViewModel.LangList}"
                          SelectedItem="{x:Bind ViewModel.SelectedSourceLanguage, Mode=TwoWay}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate x:DataType="local112:LanguageItem">
                            <TextBlock Text="{x:Bind DisplayName}"/>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
                <TextBlock Text="通常日本视觉小说选择'日文'。" Style="{StaticResource CaptionTextBlockStyle}" Foreground="{ThemeResource SystemControlPageTextBaseMediumBrush}"/>
            </StackPanel>

            <StackPanel Spacing="8">
                <TextBlock Text="目标翻译语言" Style="{StaticResource BodyStrongTextBlockStyle}"/>
                <ComboBox x:Name="TargetLanguageCombo" 
                          HorizontalAlignment="Stretch"
                          PlaceholderText="选择你希望翻译成的语言..."
                          ItemsSource="{x:Bind ViewModel.LangList}"
                          SelectedItem="{x:Bind ViewModel.SelectedTargetLanguage, Mode=TwoWay}">
                    <ComboBox.ItemTemplate>
                        <DataTemplate x:DataType="local112:LanguageItem">
                            <TextBlock Text="{x:Bind DisplayName}"/>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>
            </StackPanel>

        </StackPanel>
    </Grid>
</local:BaseStepPage>