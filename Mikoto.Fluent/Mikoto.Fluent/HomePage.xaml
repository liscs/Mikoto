<?xml version="1.0" encoding="utf-8"?>
<Page x:Class="Mikoto.Fluent.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:Mikoto.Fluent"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:local1="using:Mikoto.DataAccess"
      mc:Ignorable="d">

    <Grid Padding="24">

        <Grid.RowDefinitions>

            <RowDefinition Height="Auto" />

            <RowDefinition Height="*" />

        </Grid.RowDefinitions>



        <StackPanel Orientation="Horizontal"
                    Spacing="8"
                    Margin="0,0,0,20">

            <Button Style="{StaticResource AccentButtonStyle}"
                    Command="{x:Bind ViewModel.AddGameCommand}">

                <StackPanel Orientation="Horizontal"
                            Spacing="8">

                    <FontIcon Glyph="&#xE109;" />

                    <TextBlock Text="添加游戏" />

                </StackPanel>

            </Button>

            <Button Content="快速启动"
                    Click="QuickStart_Click" />

        </StackPanel>



        <GridView Grid.Row="1"
                  ItemsSource="{x:Bind ViewModel.Games}"
                  SelectionMode="None">

            <GridView.ItemTemplate>

                <DataTemplate x:DataType="local:GameModel">

                    <Border Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                            BorderThickness="1"
                            CornerRadius="8"
                            Width="200"
                            Padding="12">

                        <StackPanel Spacing="8">

                            <Image Source="{x:Bind GameIcon}"
                                   Height="120"
                                   Width="120"
                                   Stretch="UniformToFill" />

                            <TextBlock Text="{x:Bind GameName}"
                                       Style="{StaticResource BodyStrongTextBlockStyle}" />

                            <TextBlock Text="{x:Bind LastPlayAt}"
                                       Style="{StaticResource CaptionTextBlockStyle}"
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}" />

                        </StackPanel>

                    </Border>

                </DataTemplate>

            </GridView.ItemTemplate>

        </GridView>

    </Grid>
</Page>
