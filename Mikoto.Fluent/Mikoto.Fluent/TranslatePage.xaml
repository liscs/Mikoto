<?xml version="1.0" encoding="utf-8"?>
<Page x:Class="Mikoto.Fluent.TranslatePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="using:Mikoto.Fluent"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" xmlns:local1="using:Mikoto.Core.Models" xmlns:cvter="using:Mikoto.Fluent.Converters"
      mc:Ignorable="d">
    <Page.Resources>
        <cvter:NotifySeverityConverter x:Key="NotifySeverityConverter" />
    </Page.Resources>
    <Grid Padding="24">
        <InfoBar x:Name="GlobalInfoBar"
                 Message="{x:Bind ViewModel.NotificationMessage, Mode=OneWay}"
                 IsOpen="{x:Bind ViewModel.IsNotificationOpen, Mode=TwoWay}"
                 Severity="{x:Bind ViewModel.NotificationSeverity, Converter={StaticResource NotifySeverityConverter}, Mode=OneWay}"
                 VerticalAlignment="Top"
                 Margin="20,10,20,0"
                 Canvas.ZIndex="999">
            <InfoBar.Shadow>
                <ThemeShadow />
            </InfoBar.Shadow>
        </InfoBar>

        <Grid RowDefinitions="Auto, *" RowSpacing="20">

            <TextBox Grid.Row="0"
                     Header="游戏原文"
                     Text="{x:Bind ViewModel.OriginalText, Mode=OneWay}"
                     IsReadOnly="True"
                     TextWrapping="NoWrap"
                     AcceptsReturn="False"
                     ScrollViewer.HorizontalScrollBarVisibility="Auto"
                     ScrollViewer.HorizontalScrollMode="Enabled"
                     PlaceholderText="暂无原文信息" />

            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{x:Bind ViewModel.MultiTranslateResults, Mode=OneWay}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate x:DataType="local1:TranslationResult">
                            <Grid Margin="0,0,0,16">
                                <TextBox Header="{x:Bind TranslatorName}"
                                         Text="{x:Bind ResultText, Mode=OneWay}"
                                         IsReadOnly="True"
                                         TextWrapping="Wrap"
                                         AcceptsReturn="True"
                                         MinHeight="80"
                                         HorizontalAlignment="Stretch"
                                         PlaceholderText="正在翻译..." />

                                <ProgressRing IsActive="{x:Bind IsLoading, Mode=OneWay}" 
                                              HorizontalAlignment="Right" 
                                              VerticalAlignment="Top" 
                                              Margin="0,35,10,0"
                                              Width="16" Height="16"/>
                            </Grid>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>
    </Grid>
</Page>