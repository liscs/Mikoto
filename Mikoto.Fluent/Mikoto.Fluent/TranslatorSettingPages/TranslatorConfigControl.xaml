<?xml version="1.0" encoding="utf-8"?>
<UserControl x:Class="Mikoto.Fluent.TranslatorSettingPages.TranslatorConfigControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:Mikoto.Fluent.TranslatorSettingPages"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:cvter="using:Mikoto.Fluent.Converters"
             mc:Ignorable="d">

    <UserControl.Resources>
        <cvter:BoolToVisibilityConverter x:Key="MyBoolToVisibilityConverter" />
    </UserControl.Resources>

    <StackPanel Spacing="16"
                Padding="16">

        <TextBlock Text="{x:Bind ViewModel.Definition.Introduce, Mode=OneWay}"
                   Visibility="{x:Bind ViewModel.DescriptionVisible, Converter={StaticResource MyBoolToVisibilityConverter}, Mode=OneWay}"
                   Style="{StaticResource BodyTextBlockStyle}"
                   Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                   TextWrapping="Wrap" />

        <StackPanel Spacing="12">
            <TextBox Header="{x:Bind ViewModel.Definition.AccessKey.Title, Mode=OneWay}"
                     Text="{x:Bind ViewModel.Definition.AccessKey.Value, Mode=TwoWay}"
                     Visibility="{x:Bind ViewModel.AccessKeyVisible, Converter={StaticResource MyBoolToVisibilityConverter}, Mode=OneWay}" />

            <TextBox Header="{x:Bind ViewModel.Definition.SecretKey.Title, Mode=OneWay}"
                         Text="{x:Bind ViewModel.Definition.SecretKey.Value, Mode=TwoWay}"
                         Visibility="{x:Bind ViewModel.SecretKeyVisible, Converter={StaticResource MyBoolToVisibilityConverter}, Mode=OneWay}" 
                         />

            <TextBox Header="{x:Bind ViewModel.Definition.Region.Title, Mode=OneWay}"
                     Text="{x:Bind ViewModel.Definition.Region.Value, Mode=TwoWay}"
                     Visibility="{x:Bind ViewModel.RegionVisible, Converter={StaticResource MyBoolToVisibilityConverter}, Mode=OneWay}" />

            <TextBox Header="{x:Bind ViewModel.Definition.Endpoint.Title, Mode=OneWay}"
                     Text="{x:Bind ViewModel.Definition.Endpoint.Value, Mode=TwoWay}"
                     Visibility="{x:Bind ViewModel.EndpointVisible, Converter={StaticResource MyBoolToVisibilityConverter}, Mode=OneWay}" />

            <TextBox Header="{x:Bind ViewModel.Definition.Model.Title, Mode=OneWay}"
                     Text="{x:Bind ViewModel.Definition.Model.Value, Mode=TwoWay}"
                     Visibility="{x:Bind ViewModel.ModelVisible, Converter={StaticResource MyBoolToVisibilityConverter}, Mode=OneWay}" />
        </StackPanel>

        <MenuFlyoutSeparator />

        <StackPanel Spacing="8">
            <TextBlock Text="测试 API 连接"
                       Style="{StaticResource BodyStrongTextBlockStyle}" />

            <TextBox Header="测试文本"
                     Text="你好" />

            <Grid ColumnDefinitions="*, 8, *, 12, Auto">
                <TextBox Grid.Column="0"
                         Header="从"
                         Text="ja"
                         PlaceholderText="ja" />
                <TextBox Grid.Column="2"
                         Header="到"
                         Text="zh"
                         PlaceholderText="zh" />

                <Button Grid.Column="4"
                        Content="执行测试"
                        VerticalAlignment="Bottom"
                        Style="{StaticResource AccentButtonStyle}"
                        Click="TransTestBtn_Click" />
            </Grid>
        </StackPanel>

        <VariableSizedWrapGrid Orientation="Horizontal"
                               HorizontalAlignment="Right">
            <Button Content="申请地址"
                    Visibility="{x:Bind ViewModel.ApplyVisible, Converter={StaticResource MyBoolToVisibilityConverter}, Mode=OneWay}"
                    Margin="4"
                    Click="ApplyBtn_Click" />

            <Button Content="语言代码"
                    Visibility="{x:Bind ViewModel.LangCodeVisible, Converter={StaticResource MyBoolToVisibilityConverter}, Mode=OneWay}"
                    Margin="4"
                    Click="LangCodeBtn_Click" />

            <Button Content="官方文档"
                    Visibility="{x:Bind ViewModel.DocVisible, Converter={StaticResource MyBoolToVisibilityConverter}, Mode=OneWay}"
                    Margin="4"
                    Click="DocBtn_Click" />

            <Button Content="计费说明"
                    Visibility="{x:Bind ViewModel.BillVisible, Converter={StaticResource MyBoolToVisibilityConverter}, Mode=OneWay}"
                    Margin="4"
                    Click="BillingBtn_Click" />
        </VariableSizedWrapGrid>

    </StackPanel>
</UserControl>
